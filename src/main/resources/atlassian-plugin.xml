      <device-type>mobile</device-type>
      <category name="visuals"/>
      <parameters>
         <parameter name="type" type="enum" default="plantuml">
            <value name="plantuml"/>
            <value name="ditaa"/>
            <value name="dot"/>
            <value name="jcckit"/>
            <value name="salt"/>
