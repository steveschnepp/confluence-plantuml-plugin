<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>de.griffel.confluence.plugins</groupId>
	<artifactId>plant-uml</artifactId>
	<version>1.2</version>

	<name>Confluence PlantUML Plugin</name>
	<description>This is the PlantUML plugin for Atlassian Confluence.</description>
	<packaging>atlassian-plugin</packaging>

	<organization>
		<name>Michael Griffel</name>
	</organization>

	<properties>
		<confluence.version>3.4.7</confluence.version>
		<confluence.data.version>3.1</confluence.data.version>
	</properties>

	<url>https://studio.plugins.atlassian.com/wiki/display/PUML</url>
	<issueManagement>
		<system>JIRA</system>
		<url>https://studio.plugins.atlassian.com/wiki/display/PUML</url>
	</issueManagement>
	<ciManagement>
		<system>Bamboo</system>
		<url>https://studio.plugins.atlassian.com/builds/browse/PUML-TRUNK</url>
	</ciManagement>
	<scm>
		<connection>scm:svn:https://studio.plugins.atlassian.com/svn/PUML/tags/plant-uml-1.2</connection>
		<developerConnection>scm:svn:https://studio.plugins.atlassian.com/svn/PUML/tags/plant-uml-1.2</developerConnection>
		<url>https://studio.plugins.atlassian.com/svn/PUML/tags/plant-uml-1.2</url>
	</scm>
	<developers>
		<developer>
			<id>mgriffel</id>
			<name>Michael Griffel</name>
			<email>michael.griffel@gmail.com</email>
		</developer>
	</developers>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.6</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.atlassian.confluence</groupId>
			<artifactId>confluence</artifactId>
			<version>${confluence.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.atlassian.confluence.plugin</groupId>
			<artifactId>func-test</artifactId>
			<version>2.3</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.jwebunit</groupId>
			<artifactId>jwebunit-htmlunit-plugin</artifactId>
			<version>2.2</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.nekohtml</groupId>
			<artifactId>nekohtml</artifactId>
			<version>1.9.12</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.plantuml</groupId>
			<artifactId>plantuml</artifactId>
			<version>6242</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>com.atlassian.maven.plugins</groupId>
				<artifactId>maven-confluence-plugin</artifactId>
				<version>3.2.4</version>
				<extensions>true</extensions>
				<configuration>
					<productVersion>${confluence.version}</productVersion>
					<productDataVersion>${confluence.data.version}</productDataVersion>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.1</version>
				<configuration>
					<goals>package</goals>
					<tagBase>https://studio.plugins.atlassian.com/svn/PUML/tags</tagBase>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>bamboo</id>
			<!-- clover is already integrated in bamboo -->
		</profile>
	</profiles>

	<repositories>
		<repository>
			<id>atlassian-public</id>
			<url>https://m2proxy.atlassian.com/repository/public</url>
		</repository>
		<repository>
			<id>atlassian-m2-contrib</id>
			<name>Atlassian Maven 2 Contributor Repository</name>
			<url>http://maven.atlassian.com/contrib</url>
		</repository>
		<repository>
			<id>atlassian-m2-repository</id>
			<name>Atlassian Maven 2 Repository</name>
			<url>https://maven.atlassian.com/repository/public</url>
		</repository>
		<repository>
			<id>atlassian-m2-contrib</id>
			<name>Atlassian Maven 2 Contributor Repository</name>
			<url>http://svn.atlassian.com/svn/public/contrib/repository/maven2</url>
		</repository>
		<repository>
			<id>atlassian-m2-repository</id>
			<name>Atlassian Maven 2 Repository</name>
			<url>http://repository.atlassian.com/maven2</url>
		</repository>
	</repositories>

</project>
